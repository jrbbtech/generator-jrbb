{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "build",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES6",
    "lib": ["ESNext"]
  },
  "include": ["index.ts", "src"]
}
